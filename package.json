{
  "name": "nuxt-app",
  "private": true,
  "scripts": {
    "generate": "nuxt generate",
    "preview": "nuxt preview",
    "postinstall": "nuxt prepare",
    "build": "nuxt build",
    "build:main-css": "sass ./assets/styles/main.scss ./assets/styles/main.css",
    "build:tailwind": "pnpm run build:main-css && pnpm dlx tailwindcss -i ./assets/styles/main.css -o ./assets/styles/main.css",
    "build:storybook": "storybook build",
    "dev": "conc \"pnpm run format:mod\" \"nuxt dev\"",
    "dev:tailwind": "pnpm run build:tailwind -- --watch",
    "dev:storybook": "conc \"pnpm run format:mod\" \"storybook dev -p 6006\" \"pnpm run dev:tailwind\"",
    "format:mod": "pnpm dlx lint-staged",
    "format:all": "prettier --write .",
    "lint": "eslint --fix .",
    "test": "vitest"
  },
  "devDependencies": {
    "@nuxt/devtools": "latest",
    "@nuxtjs/tailwindcss": "^6.8.0",
    "@types/node": "^18.17.1",
    "@vue/test-utils": "^2.4.1",
    "eslint": "^8.46.0",
    "nuxt": "^3.6.5",
    "prettier": "^3.0.0",
    "vitest": "^0.33.0"
  },
  "dependencies": {
    "sass": "^1.64.1"
  }
}
